{
  "manifest_version": 2,
  "name": "GeoLead â‡„ GeoGuessr Bridge (dev)",
  "version": "0.2.5",
  "description": "Bridges GeoGuessr daily game results into GeoLead boards.",

  "browser_specific_settings": {
    "gecko": {
      "id": "geolead-bridge@example.com",
      "strict_min_version": "115.0"
    }
  },

  "permissions": [
    "storage",
    "webRequest",
    "https://www.geoguessr.com/*",
    "https://geolead.fun/*",
    "https://www.geolead.fun/*",
    "http://127.0.0.1/*"
  ],

  "background": {
    "scripts": ["background.js"]
  },

  "content_scripts": [
    {
      "matches": [
        "https://www.geoguessr.com/*"
      ],
      "js": ["geoguessr_content.js"],
      "run_at": "document_idle"
    },
    {
      "matches": [
        "https://geolead.fun/*",
        "https://www.geolead.fun/*",
        "http://127.0.0.1/*"
      ],
      "js": ["geolead_content.js"],
      "run_at": "document_idle"
    }
  ]
}
